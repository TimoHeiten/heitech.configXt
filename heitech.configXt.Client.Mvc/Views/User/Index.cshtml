@model AuthModelDto
@{
    ViewData["Title"] = "Login";
}

<div class="text-center">
    <form asp-action="Login" asp-controller="User">
        <div class="form-group">
            <label>Name</label>
            <input class="form-control" asp-for="Name" value="User-Email">
        </div>
        <div class="form-group">
            <label>Password</label>
            <input class="form-control" asp-for="Password" value="Password">
        </div>
        <button class="btn btn-primary">Login</button>
        <input asp-for="From" class="hidden" value=@ViewBag.From>
    </form>
</div>
